<div class=""
<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= task.content %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <div class="mr-2 text-right">
              <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Edit', task_path(task), class: 'btn btn-info btn-sm'%>
              <%= link_to 'Detail', task_path(task), class: 'btn btn-info btn-sm'%>
            </div>
          <% end %>
          <hr>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>